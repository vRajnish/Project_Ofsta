<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_captured_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.louis.ayn.ofsta.CapturedImageActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"
        android:id="@+id/capturedImage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/navBarOptions"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/black8"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <ImageButton
            app:srcCompat="@mipmap/ic_share_white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:id="@+id/btnImageShare"
            android:padding="@dimen/navBarIconPadding"
            android:onClick="bottomImageOptions"
            android:layout_weight="1" />

        <ImageButton
            app:srcCompat="@mipmap/ic_save_white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:id="@+id/btnImageSave"
            android:padding="@dimen/navBarIconPadding"
            android:onClick="bottomImageOptions"
            android:layout_weight="1" />

        <ImageButton
            app:srcCompat="@mipmap/ic_info_white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:id="@+id/btnImageInfo"
            android:padding="@dimen/navBarIconPadding"
            android:onClick="bottomImageOptions"
            android:layout_weight="1" />

    </LinearLayout>
</RelativeLayout>
